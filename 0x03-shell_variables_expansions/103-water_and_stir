#!/bin/bash
# Define translation tables for each base
water="water01234"
stir="stir.01234"
behlnort="behlnort"

# Translate WATER to base-5
water_dec=$(echo "${WATER}" | tr "${water}" "01234")
water_base5=$((5#${water_dec}))  # Convert to decimal then to base-5

# Translate STIR to base-5
stir_dec=$(echo "${STIR}" | tr "${stir}" "01234")
stir_base5=$((5#${stir_dec}))  # Convert to decimal then to base-5

# Add the numbers in base-5
sum_base5=$((water_base5 + stir_base5))

# Convert the sum to base-8 (behlnort)
sum_behlnort=$(printf "%o" "${sum_base5}")  # Print in octal format (base-8)

# Translate the sum to base-behlnort
echo "${sum_behlnort}" | tr "01234567" "${behlnort}"

